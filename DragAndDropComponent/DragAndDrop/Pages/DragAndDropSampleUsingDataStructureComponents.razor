@code {
  bool dragEnabled = true;

  QueryParameter queryParam = new QueryParameter() {
    Field = "DocTitle",
    Operator = "Equals",
    Values = new List<object>() {
      "I'm a cookie"
    }
  };

  List<QueryParameter> queryParams = new List<QueryParameter>();

  protected override async Task OnInitializedAsync() {
    await Task.Delay(1000);
    queryParams.Add(new QueryParameter() {
      Field = "DocTitle",
      Operator = "Contains",
      Values = new List<object>() {
        "I'm a cookie"
      }
    });
    queryParams.Add(new QueryParameter() {
      Field = "DocStatus",
      Operator = "In List",
      Values = new List<object>() {
        "RPT",
        "MEM",
        "COM",
        "Log"
      },
      AndWithNext = false
    });
    queryParams.Add(new QueryParameter() {
      Field = "DocTitle",
      Operator = "Does Not Contain",
      Values = new List<object>() {
        "There was a err"
      }
    });

    BuildModel();
  }

  void ToggleDragEnabled(MouseEventArgs e) {
    dragEnabled = !dragEnabled;
  }

  void ToggleAndOr(MouseEventArgs e, QueryParameter curParm) {
    curParm.AndWithNext = !curParm.AndWithNext;
  }

  DragAndDropContainerViewModel autoBuilderModel;
  void BuildModel() {
    autoBuilderModel = new DragAndDropContainerViewModel() {
      Name = "SQL Query"
    };

    var newGroup = new DraggableContainerViewModel() {
      Name = "SQL Query"
    };

    newGroup.AddChildElement(new DraggableItemViewModel<QueryParameter>() {
      Name = "QueryParameter",
      Item = queryParams[0],
      AllowedTargetNames = new List<string>() { "SQL Query", "QueryParameter" }
    });
    newGroup.AddChildElement(new DraggableItemViewModel<QueryParameter>() {
      Name = "QueryParameter",
      Item = queryParams[1],
      AllowedTargetNames = new List<string>() { "SQL Query", "QueryParameter" }
    });

    autoBuilderModel.AddChildElement(newGroup);
    autoBuilderModel.AddChildElement(new DraggableItemViewModel<QueryParameter>() {
      Name = "QueryParameter",
      Item = queryParams[2],
      AllowedTargetNames = new List<string>() { "SQL Query", "QueryParameter" }
    });

  }

