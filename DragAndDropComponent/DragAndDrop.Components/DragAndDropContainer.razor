@inherits DragAndDropElement

<div class="draganddrop-group">
  @if (model is null) {
    <p>Model is null</p>
  } else {
    @if (!string.IsNullOrWhiteSpace(model.Name) && ShowTitle) {
      <div class="draganddrop-groupname h4">@model.Name</div>
    }
    <div class="draganddrop-item-list">
      @if (ChildContent is null) {
        <p>No children</p>
      } else {
        @ChildContent
      }
    </div>
  }
</div>


@code {
  DragAndDropContainerViewModel model;

  [Parameter] public bool ShowTitle { get; set; } = true;

  [Parameter] public RenderFragment ChildContent { get; set; }

  protected override void OnInitialized() {
    model = new DragAndDropContainerViewModel();
  }

  protected override void OnParametersSet() {
    model.Name = Name;
  }
}
